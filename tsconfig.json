{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015","es2016","es2017","esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules/**/*.*",
    "test/rules/*.*",
    "**/*.js.flow"
  ],
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ]
}
